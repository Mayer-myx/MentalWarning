<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/it_mes_y_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <com.example.mentalwarning.Widget.RoundImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/you"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:gravity="left"
            android:background="@drawable/your_reply">
            <TextView
                android:id="@+id/it_tv_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:text="说了一句话。"
                android:textColor="#5F6670"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/it_mes_m_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_gravity="right"
            android:background="@drawable/my_send">
            <TextView
                android:id="@+id/it_tv_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="说了一句话。"
                android:textSize="14sp"
                android:textColor="#fff"/>
        </LinearLayout>
        <com.example.mentalwarning.Widget.RoundImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/me"/>
    </LinearLayout>

</LinearLayout>