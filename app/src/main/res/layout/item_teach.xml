<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_teach_iv_pic"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@mipmap/machine"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp">
        <TextView
            android:id="@+id/item_teach_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="卢本伟"
            android:textSize="14sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/item_teach_tv_like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/item_teach_tv_name"
            android:text="广受好评 尽职尽责"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/item_teach_tv_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="12sp"
            android:text="你说得对你说得对你说得对你说得对你说得对你说得对你说得对你说得对你说得对你说得对你说得对你说得对你说得对你说得对你说得对你说得对你说得对你说得对你说得对"
            android:layout_below="@id/item_teach_tv_like"/>
    </RelativeLayout>

</LinearLayout>